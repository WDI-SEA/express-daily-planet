<% include ../partials/header.ejs %>

<div class="container">
  <h2>Add a New Article<small>...but only if it's super cool...</small></h2>
  <form class="form-horizontal" action="/articles" method="POST">
    <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" for="formGroupInputLarge">Article Title</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="formGroupInputLarge" placeholder="title" name="title">
      </div>
    </div>
    <div class="form-group form-group-sm">
      <label class="col-sm-2 control-label" for="formGroupInputSmall">Article Summary</label>
      <div class="col-sm-10">
        <textarea class="form-control" type="text" rows="3" name="summary"></textarea>
      </div>
    </div>
    <div class="form-group form-group-sm">
      <label class="col-sm-2 control-label" for="formGroupInputSmall">Article Body</label>
      <div class="col-sm-10">
<!--         <input class="form-control" type="text" id="formGroupInputSmall" placeholder="body content" name="body"> -->
        <textarea class="form-control" type="text" rows="3" name="body"></textarea>
      </div>
   <!--    <input class="btn btn-default" type="submit" value="Submit"> -->
    </div>
     <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>
