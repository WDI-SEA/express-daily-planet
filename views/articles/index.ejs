<!DOCTYPE html>
<html>
  <head>
    <title>Daily Planet Articles</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
     <% include ../partials/nav.ejs %>
      <ul style="text-align:center; list-style-type:none; margin: 0 auto; width:600px">
        <% articles.forEach(function(article, index){ %>
        <li style="border:2px solid black">
          <a href ="/articles/<%= index %>">
            <h3><%= article.title %></h3>
            <img src="./articles/img/<%= index %>.jpg" style="background-size:cover; width:300px; height:200px">
          </a>
        </li>
        <% }); %></a>
      </ul>
  </body>
</html>