<h2>Edit Article</h2>

<form id="edit-form" action="/articles/<%- article.id %>">
	<div class="form group">
		<label for="name">Title:</label>
		<input type="text" name="title" id="title" class="form-control" placeholder="<%= article.title %>">
	</div>
	<div class="form group">
		<label for="body">Body:</label>
		<input type="textarea" class="form-control" name="body" id="body" class="form-control" placeholder="<%= article.body %>">
	</div>
	<input type="submit" class="update-btn" value="Update">
</form>