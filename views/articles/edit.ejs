<h3>Edit Article:</h3>
<form id="edit-form" action="/articles/<%- article.id %>">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= String(article.title) %>"/>
  </div>
  <div class="form-group">
    <label for="title">Author:</label>
    <input type="text" name="author" id="author" class="form-control" value="<%= String(article.author) %>"/>
  </div>
  <div class="form-group">
    <label for="body">Body:</label>
    <input type="text" name="body" id="body" class="form-control" value="<%= String(article.body) %>"/>
  </div>
  <input type="submit" class="btn btn-xs btn-warning" value="Update"/>
  <!-- <a href="/articles/<%- article.id %>" class="btn btn-xs btn-danger delete-link">Delete</a> -->
</form>
